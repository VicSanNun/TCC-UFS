\begin_layout Section
caso de 3 dim
\end_layout

\begin_layout Standard
;
\begin_inset Formula \begin{eqnarray*}
x_{3} &=&a\sinh \chi \cos \theta _{2} \\
x_{2} &=&a\cosh \chi \sin \theta _{2}\cos \theta _{1} \\
x_{1} &=&a\cosh \chi \sin \theta _{2}\sin \theta _{1} \\
0 &\leq &\chi <\infty ,\ 0\leq \theta _{2}\leq \pi ,\ 0\leq \theta _{1}<2\pi
\end{eqnarray*}
\end_inset


\end_layout

\begin_layout Standard

\begin_inset Formula \begin{eqnarray*}
\nabla ^{2}u &=&\frac{1}{a^{2}\left( \sinh ^{2}\chi +\cos ^{2}\theta
_{2}\right) }\left[ \frac{1}{\sin \theta _{2}}\frac{\partial }{\partial
\theta _{2}}\left( \sin \theta _{2}\frac{\partial u}{\partial \theta _{2}}\right) +\frac{1}{\cosh \chi }\frac{\partial }{\partial \chi }\left( \cosh
\chi \frac{\partial u}{\partial \chi }\right) \right] \\
&&+\frac{1}{a^{2}\sin ^{2}\theta _{2}\cosh ^{2}\chi }\frac{\partial ^{2}u}{\partial \theta _{1}^{2}}=0
\end{eqnarray*}
\end_inset

aplica separação de variáveis na eq.
\end_layout

\begin_layout Standard
1ro separar a variavel 
\begin_inset Formula $\theta _{1}$
\end_inset

 com a constante de separação 
\begin_inset Formula $\lambda _{1}$
\end_inset


\end_layout

\begin_layout Standard
depois separar as variáveis 
\begin_inset Formula $\theta _{2}$
\end_inset

 e 
\begin_inset Formula $\chi $
\end_inset

 a constante de separação 
\begin_inset Formula $\lambda _{2}$
\end_inset


\end_layout

\begin_layout Standard
deve obter 3 equações dif. ordinarias com constantes de separação 
\begin_inset Formula $\lambda _{1}$
\end_inset

 e 
\begin_inset Formula $\lambda _{2}$
\end_inset


\end_layout

\begin_layout Standard
aplicar as condições de contorno: 
\begin_inset Formula \begin{equation*}
u\left( \theta _{1},\theta _{2},\chi \right) =u\left( \theta _{1}+2\pi
,\theta _{2},\chi \right)
\end{equation*}
\end_inset

periodicidade (que segue da univocacidade) pela variável 
\begin_inset Formula $\theta _{1}$
\end_inset


\end_layout

\begin_layout Standard
e a condição que solução deve ser não singular dentro de intervalos de variação das variáveis
\end_layout

\begin_layout Standard
;
\begin_inset Formula \begin{equation*}
u(\theta _{1},\theta _{2},\chi )=\Theta _{1}(\theta _{1})W(\theta _{2},\chi )
\end{equation*}
\end_inset

melhor deixar na forma:
\begin_inset Formula \begin{equation*}
-\frac{\partial ^{2}\Theta _{1}}{\partial \theta _{1}^{2}}\frac{1}{\Theta
_{1}}=\frac{1}{W}\frac{\sin ^{2}\theta _{2}\cosh ^{2}\chi }{\left( \sinh
^{2}\chi +\cos ^{2}\theta _{2}\right) }\left[ \frac{1}{\sin \theta _{2}}\frac{\partial }{\partial \theta _{2}}\left( \sin \theta _{2}\frac{\partial W}{\partial \theta _{2}}\right) +\frac{1}{\cosh \chi }\frac{\partial }{\partial \chi }\left( \cosh \chi \frac{\partial W}{\partial \chi }\right) \right] =\lambda _{1}
\end{equation*}
\end_inset


\begin_inset Formula \begin{equation*}
-\frac{\partial ^{2}\Theta _{1}}{\partial \theta _{1}^{2}}\frac{1}{\Theta
_{1}}=\lambda _{1}\Rightarrow \frac{d^{2}\Theta _{1}}{d\theta _{1}^{2}}+\lambda _{1}\Theta _{1}=0
\end{equation*}
\end_inset

a 1ra eq dif ordinaria com condição de contorno (cc) é
\begin_inset Formula \begin{equation*}
\frac{d^{2}\Theta _{1}}{d\theta _{1}^{2}}+\lambda _{1}\Theta _{1}=0,\ \Theta
_{1}\left( \theta _{1}\right) =\Theta _{1}\left( \theta _{1}+2\pi \right)
\end{equation*}
\end_inset

resolve a eq (para vc escrever) obtem que 
\begin_inset Formula \begin{equation*}
\lambda _{1}=m^{2},\ m\in \mathbb{Z}
\end{equation*}
\end_inset


\begin_inset Formula \begin{equation*}
\Theta _{1}\left( \theta _{1}\right) =Ae^{im\theta _{1}}+Be^{-im\theta _{1}}
\end{equation*}
\end_inset

próximo passo
\begin_inset Formula \begin{equation*}
W(\theta _{2},\chi )=\Theta _{2}(\theta _{2})X(\chi )
\end{equation*}
\end_inset


\begin_inset Formula \begin{equation*}
\left[ \frac{1}{\sin \theta _{2}}\frac{\partial }{\partial \theta _{2}}\left( \sin \theta _{2}\frac{\partial W}{\partial \theta _{2}}\right) +\frac{1}{\cosh \chi }\frac{\partial }{\partial \chi }\left( \cosh \chi \frac{\partial W}{\partial \chi }\right) \right] =\lambda _{1}W\frac{\left( \sinh
^{2}\chi +\cos ^{2}\theta _{2}\right) }{\sin ^{2}\theta _{2}\cosh ^{2}\chi }
\end{equation*}
\end_inset

aqui 
\begin_inset Formula \begin{equation*}
\frac{\left( \sinh ^{2}\chi +\cos ^{2}\theta _{2}\right) }{\sin ^{2}\theta
_{2}\cosh ^{2}\chi }=\frac{1}{\sin ^{2}\theta _{2}}+\frac{1}{\cosh ^{2}\chi }
\end{equation*}
\end_inset

p
\begin_inset Formula \begin{equation*}
\left[ X\frac{1}{\sin \theta _{2}}\frac{\partial }{\partial \theta _{2}}\left( \sin \theta _{2}\frac{\partial \Theta _{2}}{\partial \theta _{2}}\right) +\Theta _{2}\frac{1}{\cosh \chi }\frac{\partial }{\partial \chi }\left( \cosh \chi \frac{\partial X}{\partial \chi }\right) \right] =\lambda
_{1}\Theta _{2}X\left( \frac{1}{\sin ^{2}\theta _{2}}+\frac{1}{\cosh
^{2}\chi }\right)
\end{equation*}
\end_inset


\begin_inset Formula \begin{equation*}
\left[ \frac{1}{\Theta _{2}}\frac{1}{\sin \theta _{2}}\frac{\partial }{\partial \theta _{2}}\left( \sin \theta _{2}\frac{\partial \Theta _{2}}{\partial \theta _{2}}\right) +\frac{1}{X}\frac{1}{\cosh \chi }\frac{\partial 
}{\partial \chi }\left( \cosh \chi \frac{\partial X}{\partial \chi }\right) \right] =\lambda _{1}\left( \frac{1}{\sin ^{2}\theta _{2}}+\frac{1}{\cosh
^{2}\chi }\right)
\end{equation*}
\end_inset


\begin_inset Formula \begin{equation*}
-\frac{1}{\Theta _{2}}\frac{1}{\sin \theta _{2}}\frac{\partial }{\partial
\theta _{2}}\left( \sin \theta _{2}\frac{\partial \Theta _{2}}{\partial
\theta _{2}}\right) +\lambda _{1}\frac{1}{\sin ^{2}\theta _{2}}=\frac{1}{X}\frac{1}{\cosh \chi }\frac{\partial }{\partial \chi }\left( \cosh \chi \frac{\partial X}{\partial \chi }\right) -\lambda _{1}\frac{1}{\cosh ^{2}\chi }=\lambda _{2}
\end{equation*}
\end_inset

portanto
\begin_inset Formula \begin{equation*}
-\frac{1}{\Theta _{2}}\frac{1}{\sin \theta _{2}}\frac{\partial }{\partial
\theta _{2}}\left( \sin \theta _{2}\frac{\partial \Theta _{2}}{\partial
\theta _{2}}\right) +\lambda _{1}\frac{1}{\sin ^{2}\theta _{2}}=\lambda _{2}
\end{equation*}
\end_inset


\begin_inset Formula \begin{equation*}
\frac{1}{X}\frac{1}{\cosh \chi }\frac{\partial }{\partial \chi }\left( \cosh
\chi \frac{\partial X}{\partial \chi }\right) -\lambda _{1}\frac{1}{\cosh
^{2}\chi }=\lambda _{2}
\end{equation*}
\end_inset

ou
\begin_inset Formula \begin{equation*}
\frac{1}{\sin \theta _{2}}\frac{\partial }{\partial \theta _{2}}\left( \sin
\theta _{2}\frac{\partial \Theta _{2}}{\partial \theta _{2}}\right) +\left(
\lambda _{2}-\lambda _{1}\frac{1}{\sin ^{2}\theta _{2}}\right) \Theta _{2}=0
\end{equation*}
\end_inset


\begin_inset Formula \begin{equation*}
\frac{1}{\cosh \chi }\frac{\partial }{\partial \chi }\left( \cosh \chi \frac{\partial X}{\partial \chi }\right) -\left( \lambda _{2}+\lambda _{1}\frac{1}{\cosh ^{2}\chi }\right) X=0
\end{equation*}
\end_inset

podemos aplicar 
\begin_inset Formula $\lambda _{1}=m^{2}$
\end_inset


\begin_inset Formula \begin{equation*}
\frac{1}{\sin \theta _{2}}\frac{\partial }{\partial \theta _{2}}\left( \sin
\theta _{2}\frac{\partial \Theta _{2}}{\partial \theta _{2}}\right) +\left(
\lambda _{2}-\frac{m^{2}}{\sin ^{2}\theta _{2}}\right) \Theta _{2}=0
\end{equation*}
\end_inset


\begin_inset Formula \begin{equation*}
\frac{1}{\cosh \chi }\frac{\partial }{\partial \chi }\left( \cosh \chi \frac{\partial X}{\partial \chi }\right) -\left( \lambda _{2}+\frac{m^{2}}{\cosh
^{2}\chi }\right) X=0
\end{equation*}
\end_inset

Na eq para 
\begin_inset Formula $\Theta _{2}$
\end_inset

 vc reconhece a eq de Legendre. Soluções não singulares expressas em termos de polinomios de Legendre. E determinamos 
\begin_inset Formula $\lambda _{2}=n\left( n+1\right) ,$
\end_inset

 
\begin_inset Formula $n\in \mathbb{N}_{0}=\left\{ 0,1,2,3,...\right\} .$
\end_inset

 Escreva as soluções!
\end_layout

